{{>header}}

        
        <p>
<form action="/inscrito" method="post">
    <div class="container">
        <h3>
            Inscripción de estudiantes<br><br>
        </h3>
        <div class="row">
            <div class="col">
                <label>ID</label>
                <input type="number" class="form-control" name="id" placeholder="Id Curso" required><br>
            </div>
            <div class="col">
                <label>Nombre Curso</label>
                <input type="text" class="form-control" name="nombre" placeholder="Nombre Curso" required><br>
            </div>
            <div class="col">
                <label>Valor</label>
                <input type="number" class="form-control" name="valor" placeholder="Ingrese Valor" required><br>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <label>Descripción</label>
                <textarea class="form-control" name="descripcion" placeholder="Descripción" required></textarea>
            </div>
            <div class="col">
                <label>Ingrese Modalidad</label>
                <select name="modalidad" class="form-control">
                    <option value="-">-</option>
                    <option value="virtual">Virtual</option>
                    <option value="Presencial">Presencial</option>
                </select>
            </div>
            <div class="col">
                <label>Intensidad</label>
                <input type="number" class="form-control" name="intensidad" placeholder="Ingrese Intensidad"><br>
            </div>
        </div>
        <br>
        <button class="btn btn-primary">Enviar</button>
        <br>
    </div>
</form>
        </p>
{{>footer}}